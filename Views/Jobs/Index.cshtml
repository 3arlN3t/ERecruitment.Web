@model ERecruitment.Web.ViewModels.BrowseJobsViewModel
@using ERecruitment.Web.Models
@{
    ViewData["Title"] = "Browse Jobs";
}

<div class="container">
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-briefcase me-3 text-primary"></i>Available Positions
                </h1>
                <p class="text-muted mb-0">Explore exciting career opportunities in South Africa's public sector</p>
            </div>
            @if (Model.IsAdmin)
            {
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a class="btn btn-primary btn-lg" asp-action="Create">
                        <i class="fas fa-plus-circle me-2"></i>Create New Job
                    </a>
                </div>
            }
            else if (Model.IsApplicant)
            {
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a class="btn btn-outline-primary btn-lg" asp-controller="Applicant" asp-action="Dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i>My Dashboard
                    </a>
                </div>
            }
        </div>
    </div>

@if (Model.IsApplicant && !Model.ProfileReadyForApplications)
{
    <div class="alert alert-warning border-0 shadow-sm mb-4">
        <div class="d-flex align-items-start">
            <i class="fas fa-exclamation-triangle fa-lg me-3 mt-1"></i>
            <div>
                <h5 class="alert-heading mb-2">Complete your profile to apply for vacancies</h5>
                <p class="mb-2">We need a few more details before you can submit applications. Please update your profile with the information below:</p>
                @if (Model.MissingProfileFields.Any())
                {
                    <ul class="mb-2">
                        @foreach (var field in Model.MissingProfileFields)
                        {
                            <li>@field</li>
                        }
                    </ul>
                }
                <a class="btn btn-outline-primary btn-sm" asp-controller="Applicant" asp-action="Profile2">
                    <i class="fas fa-user-edit me-2"></i>Update Profile
                </a>
            </div>
        </div>
    </div>
}

@if (Model.Jobs.Any())
    {
        <!-- Job Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="stat-value">@Model.Jobs.Count</div>
                    <div class="stat-label">Open Positions</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-value">@Model.Jobs.Select(j => j.Department).Distinct().Count()</div>
                    <div class="stat-label">Departments</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="stat-value">@Model.Jobs.Select(j => j.Location).Distinct().Count()</div>
                    <div class="stat-label">Locations</div>
                </div>
            </div>
        </div>

        <!-- Job Cards Grid -->
        <div class="row g-4">
            @foreach (var job in Model.Jobs)
            {
                var existingApplication = Model.ApplicantApplications.FirstOrDefault(a => a.JobPostingId == job.Id);
                var hasApplied = existingApplication != null && existingApplication.Status != ApplicationStatus.Draft;
                var isDraft = existingApplication?.Status == ApplicationStatus.Draft;
                var isSubmitted = existingApplication?.Status == ApplicationStatus.Submitted;
                var isInterviewOrOffer = existingApplication?.Status == ApplicationStatus.Interview || existingApplication?.Status == ApplicationStatus.Offer;
                var isRejected = existingApplication?.Status == ApplicationStatus.Rejected;
                var isWithdrawn = existingApplication?.Status == ApplicationStatus.Withdrawn;
                var isExpired = job.IsExpired;
                var isActive = job.IsActive;
                var isClosed = !job.IsActive;
                var isNotAcceptingApps = !job.IsAcceptingApplications;
                <div class="col-md-6 col-lg-4">
                    <div class="job-card fade-in" style="@(hasApplied ? "opacity: 0.6; background-color: #f8f9fa; border: 1px solid #dee2e6; pointer-events: none;" : (!isActive && !Model.IsAdmin ? "opacity: 0.6; background-color: #f8f9fa; border: 1px solid #dee2e6; pointer-events: none;" : (!isActive ? "opacity: 0.7; background-color: #f8f9fa; border: 1px solid #dee2e6;" : (isExpired && !Model.IsAdmin ? "opacity: 0.6; background-color: #f8f9fa; border: 1px solid #dee2e6; pointer-events: none;" : (isExpired ? "opacity: 0.7; background-color: #f8f9fa; border: 1px solid #dee2e6;" : "")))))">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                @if (isClosed)
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-lock me-1"></i>Closed
                                    </span>
                                }
                                else if (isExpired)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-hourglass-end me-1"></i>Expired
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Active
                                    </span>
                                }
                            </div>
                            @if (hasApplied)
                            {
                                @if (isSubmitted)
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-paper-plane me-1"></i>Applied
                                    </span>
                                }
                                else if (isInterviewOrOffer && existingApplication != null)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>@(existingApplication.Status == ApplicationStatus.Interview ? "Interview" : "Offer")
                                    </span>
                                }
                                else if (isRejected)
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle me-1"></i>Rejected
                                    </span>
                                }
                                else if (isWithdrawn)
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-ban me-1"></i>Withdrawn
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-check me-1"></i>Applied
                                    </span>
                                }
                            }
                            else if (isExpired)
                            {
                                <span class="badge bg-dark">
                                    <i class="fas fa-times-circle me-1"></i>Closed
                                </span>
                            }
                        </div>
                        <h3 class="@(hasApplied || isExpired ? "text-muted" : "")">@job.Title</h3>

                        <div class="job-meta">
                            <div class="job-meta-item">
                                <i class="fas fa-building"></i>
                                <span>@job.Department</span>
                            </div>
                            <div class="job-meta-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@job.Location</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(job.Description))
                        {
                            <p class="text-muted mt-3 mb-3" style="font-size: 0.9rem; line-height: 1.6;">
                                @(job.Description.Length > 120 ? job.Description.Substring(0, 120) + "..." : job.Description)
                            </p>
                        }

                        <div class="mt-auto pt-3 border-top">
                            <div class="d-flex gap-2 flex-wrap">
                                @if (Model.IsApplicant)
                                {
                                    @if (hasApplied)
                                    {
                                        <a asp-controller="Applications" asp-action="Job" asp-route-id="@job.Id" class="btn btn-outline-secondary btn-sm flex-grow-1">
                                            <i class="fas fa-check-circle me-1"></i>View Application Status
                                        </a>
                                    }
                                    else if (isExpired || isClosed)
                                    {
                                        var tooltip = isClosed
                                            ? "This position has been closed by administrators"
                                            : $"This position closed on {job.ClosingDate?.ToString("dd MMM yyyy")}";
                                        <button class="btn btn-secondary btn-sm flex-grow-1" disabled title="@tooltip">
                                            <i class="fas fa-times-circle me-1"></i>Not Available
                                        </button>
                                    }
                                    else if (isDraft)
                                    {
                                        <a asp-controller="Applications" asp-action="Job" asp-route-id="@job.Id" class="btn btn-warning btn-sm flex-grow-1">
                                            <i class="fas fa-pencil-alt me-1"></i>Continue Draft
                                        </a>
                                    }
                                    else if (!Model.ProfileReadyForApplications)
                                    {
                                        <button class="btn btn-outline-secondary btn-sm flex-grow-1" type="button" disabled title="Complete your profile to apply">
                                            <i class="fas fa-user-cog me-1"></i>Complete Profile to Apply
                                        </button>
                                    }
                                    else
                                    {
                                        <a asp-controller="Applications" asp-action="Job" asp-route-id="@job.Id" class="btn btn-primary btn-sm flex-grow-1">
                                            <i class="fas fa-eye me-1"></i>View & Apply
                                        </a>
                                    }
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary btn-sm flex-grow-1">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                }

                                @if (Model.IsAdmin)
                                {
                                    <a asp-action="Applications" asp-route-id="@job.Id" class="btn btn-outline-info btn-sm" title="View Applications">
                                        <i class="fas fa-file-alt"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-outline-secondary btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (isClosed || isExpired)
                                    {
                                        <button type="button" class="btn btn-outline-success btn-sm" title="Reopen Position" style="cursor: pointer;" onclick="reopenJob('@job.Id'); return false;">
                                            <i class="fas fa-sync-alt me-1"></i>Reopen
                                        </button>
                                    }
                                    else
                                    {
                                        <form asp-action="Close" asp-route-id="@job.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning btn-sm" title="Close Position" onclick="return confirm('Are you sure you want to close this position? Applicants will no longer be able to apply.');">
                                                <i class="fas fa-lock me-1"></i>Close
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="feature-icon mx-auto mb-4" style="width: 100px; height: 100px; font-size: 3rem; opacity: 0.5;">
                <i class="fas fa-briefcase"></i>
            </div>
            <h3 class="text-muted mb-3">No Job Postings Available</h3>
            <p class="text-muted mb-4">There are currently no open positions. Please check back later.</p>
            @if (Model.IsAdmin)
            {
                <a class="btn btn-primary btn-lg" asp-action="Create">
                    <i class="fas fa-plus-circle me-2"></i>Create First Job Posting
                </a>
            }
        </div>
    }
</div>

<!-- Reopen Job Modal -->
<div id="modalContainer"></div>

@section Scripts {
    <script>
        function reopenJob(jobId) {
            // Load the modal content via AJAX
            fetch(`/Jobs/ReopenModal/${jobId}`)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load modal');
                    return response.text();
                })
                .then(html => {
                    const container = document.getElementById('modalContainer');
                    container.innerHTML = html;
                    
                    // Find and show the modal
                    const modalElement = container.querySelector('#reopenJobModal');
                    if (modalElement) {
                        const modal = new bootstrap.Modal(modalElement);
                        modal.show();
                    } else {
                        console.error('Modal element not found');
                    }
                })
                .catch(error => {
                    console.error('Error loading modal:', error);
                    alert('Failed to load reopen dialog. Please try again.');
                });
        }
    </script>
}


