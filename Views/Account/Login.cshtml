@model LoginViewModel
@{
    ViewData["Title"] = "Applicant Login";
}

<div class="container">
    <div class="auth-container">
        <div class="auth-card fade-in">
            <div class="auth-header">
                <div class="text-center mb-3">
                    <div class="feature-icon mx-auto" style="width: 70px; height: 70px;">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                </div>
                <h1>Welcome Back</h1>
                <p>Sign in to access your applicant dashboard</p>
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <input asp-for="Email" class="form-control form-control-sm" placeholder="your.email@example.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label asp-for="Password" class="form-label mb-0">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="text-primary small">
                            Forgot Password?
                        </a>
                    </div>
                    <input asp-for="Password" class="form-control form-control-sm" placeholder="Enter your password" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button class="btn btn-primary btn-lg w-100 mb-3" type="submit">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </button>

                <div class="text-center">
                    <p class="text-muted mb-2">Don't have an account?</p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>Create an Account
                    </a>
                </div>
            </form>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Admin" asp-action="Login" class="text-muted">
                <i class="fas fa-shield-alt me-2"></i>Administrator Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
