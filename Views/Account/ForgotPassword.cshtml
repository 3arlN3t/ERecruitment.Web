@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="auth-container">
        <div class="auth-card fade-in">
            <div class="auth-header">
                <div class="text-center mb-3">
                    <div class="feature-icon mx-auto" style="width: 70px; height: 70px;">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <h1>Forgot Password?</h1>
                <p>Enter your email address and we'll send you a link to reset your password</p>
            </div>

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <input asp-for="Email" class="form-control form-control-sm" placeholder="your.email@example.com" autocomplete="email" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button class="btn btn-primary btn-lg w-100 mb-3" type="submit">
                    <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                </button>

                <div class="text-center">
                    <p class="text-muted mb-2">Remember your password?</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Back to Sign In
                    </a>
                </div>
            </form>
        </div>

        <div class="text-center mt-4">
            <div class="alert alert-info d-inline-block">
                <small>
                    <i class="fas fa-info-circle me-2"></i>
                    The password reset link will expire in 1 hour for security reasons.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
