@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="auth-container">
        <div class="auth-card fade-in">
            <div class="auth-header">
                <div class="text-center mb-3">
                    <div class="feature-icon mx-auto" style="width: 70px; height: 70px;">
                        <i class="fas fa-lock"></i>
                    </div>
                </div>
                <h1>Reset Your Password</h1>
                <p>Create a new password for your account</p>
            </div>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="alert alert-info mb-4">
                    <small>
                        <i class="fas fa-info-circle me-2"></i>
                        Resetting password for: <strong>@Model.Email</strong>
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock me-2"></i>New Password
                    </label>
                    <input asp-for="Password" class="form-control form-control-sm" placeholder="Minimum 8 characters" autocomplete="new-password" autofocus />
                    <small class="form-text text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Minimum 8 characters with at least one digit and lowercase letter
                    </small>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="fas fa-lock me-2"></i>Confirm New Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-sm" placeholder="Re-enter your password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-primary btn-lg w-100 mb-3" type="submit">
                    <i class="fas fa-check-circle me-2"></i>Reset Password
                </button>

                <div class="text-center">
                    <a asp-controller="Account" asp-action="Login" class="text-muted">
                        <i class="fas fa-arrow-left me-1"></i>Back to Sign In
                    </a>
                </div>
            </form>
        </div>

        <div class="text-center mt-4">
            <div class="alert alert-warning d-inline-block">
                <small>
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This password reset link can only be used once.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
