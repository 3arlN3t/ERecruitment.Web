@{
    ViewData["Title"] = "Confirm Your Email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text fa-3x text-primary"></i>
                    </div>
                    <h1 class="h3 mb-3">Almost there!</h1>
                    <p class="text-muted mb-4">
                        We sent a confirmation link to your email address. Please open your inbox and follow the link to activate your
                        account before signing in.
                    </p>
                    <div class="alert alert-info text-start" role="alert">
                        <i class="fas fa-lightbulb me-2"></i>
                        If you donâ€™t see the email within a few minutes, check your spam or junk folder. You can request a new link
                        from the sign-in page if needed.
                    </div>
                    <a asp-action="Login" class="btn btn-primary btn-lg mt-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Return to Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
