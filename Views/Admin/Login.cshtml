@model AdminLoginViewModel
@{
    ViewData["Title"] = "Administrator Access";
}

<div class="container-fluid min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <!-- Main Login Card -->
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-5">
                            <div class="mb-4">
                                <i class="fas fa-shield-alt" style="font-size: 3rem; color: #667eea;"></i>
                            </div>
                            <h1 class="h2 fw-bold mb-2">Administrator Access</h1>
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Secure access to operational dashboards
                            </p>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info border-0 mb-4" style="background-color: #e7f3ff;">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-key text-info" style="font-size: 1.5rem;"></i>
                                </div>
                                <div>
                                    <h6 class="alert-heading mb-2">Access Code Required</h6>
                                    <p class="mb-0 small">
                                        Enter the daily rotating access code that has been distributed to you by the Project Management Office (PMO). 
                                        The code changes daily for enhanced security.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Login Form -->
                        <form asp-action="Login" method="post" novalidate class="mb-4">
                            @Html.AntiForgeryToken()
                            
                            @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                            {
                                <div class="alert alert-danger alert-dismissible fade show border-0" role="alert">
                                    <div class="d-flex">
                                        <div class="me-3">
                                            <i class="fas fa-exclamation-circle"></i>
                                        </div>
                                        <div>
                                            <strong>Access Denied</strong>
                                            <p class="mb-0 small mt-1">The access code you entered is incorrect. Please try again or contact the PMO if you have not received your code.</p>
                                        </div>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <div class="mb-4">
                                <label asp-for="AccessCode" class="form-label fw-bold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Access Code
                                </label>
                                <input asp-for="AccessCode" 
                                       class="form-control form-control-lg" 
                                       placeholder="Enter your access code"
                                       autocomplete="off"
                                       autofocus />
                                <span asp-validation-for="AccessCode" class="text-danger small d-block mt-2"></span>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-shield-alt me-1"></i>Your access code is case-sensitive
                                </small>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Access Dashboard
                            </button>
                        </form>

                        <!-- Divider -->
                        <hr class="my-4" />

                        <!-- Support Section -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="text-center p-3 border rounded-3" style="background-color: #f8f9fa;">
                                    <i class="fas fa-question-circle text-primary mb-2" style="font-size: 1.5rem; display: block;"></i>
                                    <h6 class="small fw-bold mb-2">Don't have a code?</h6>
                                    <p class="small text-muted mb-0">Contact your PMO administrator to request your access code</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center p-3 border rounded-3" style="background-color: #f8f9fa;">
                                    <i class="fas fa-headset text-primary mb-2" style="font-size: 1.5rem; display: block;"></i>
                                    <h6 class="small fw-bold mb-2">Need Help?</h6>
                                    <p class="small text-muted mb-0">Contact the support team for assistance</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Info -->
                <div class="text-center mt-5">
                    <p class="text-white-50 small mb-2">
                        <i class="fas fa-lock me-1"></i>Secure, encrypted connection
                    </p>
                    <p class="text-white-50 small">
                        <i class="fas fa-building me-1"></i>National Department of Tourism - eRecruitment Portal
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-focus on access code input
        document.addEventListener('DOMContentLoaded', function() {
            const accessCodeInput = document.getElementById('AccessCode');
            if (accessCodeInput) {
                accessCodeInput.focus();
            }
        });
    </script>
}
