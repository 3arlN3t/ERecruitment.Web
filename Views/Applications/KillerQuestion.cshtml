@model KillerQuestionViewModel
@{
    ViewData["Title"] = "Screening Question";
}

<div class="container">
    <!-- Progress Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-clipboard-check me-3 text-primary"></i>Screening Question
                </h1>
                <p class="text-muted mb-0">Question @(Model.QuestionIndex + 1) of @Model.TotalQuestions</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-primary" role="progressbar" 
                         style="width: @(((Model.QuestionIndex + 1) * 100.0 / Model.TotalQuestions).ToString("F0"))%;" 
                         aria-valuenow="@(Model.QuestionIndex + 1)" 
                         aria-valuemin="0" 
                         aria-valuemax="@Model.TotalQuestions">
                        @(((Model.QuestionIndex + 1) * 100.0 / Model.TotalQuestions).ToString("F0"))%
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Question Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="fas fa-question-circle me-2"></i>Mandatory Requirement
            </h2>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Important:</strong> This is a mandatory requirement for the position. 
                Please read carefully and answer honestly. If you do not meet this requirement, 
                your application cannot proceed.
            </div>

            <div class="mb-4 p-4" style="background-color: #f8f9fa; border-left: 4px solid #0d6efd; border-radius: 4px;">
                <h5 class="text-primary mb-3">Question:</h5>
                <p class="mb-0 fs-5" style="white-space: pre-wrap;">@Model.Question</p>
            </div>

            <form asp-action="KillerQuestion" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="JobId" />
                <input type="hidden" asp-for="QuestionIndex" />
                <input type="hidden" asp-for="TotalQuestions" />
                
                <div class="mb-4">
                    <label asp-for="Answer" class="form-label fw-bold">
                        <i class="fas fa-comment-dots me-2"></i>Your Response
                    </label>
                    <textarea asp-for="Answer" rows="6" class="form-control" 
                              placeholder="Please provide details about how you meet this requirement..."></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                    <div class="form-text">
                        <i class="fas fa-lightbulb me-1"></i>
                        Provide as much detail as possible to help us understand your qualifications.
                    </div>
                </div>

                <div class="mb-4">
                    <div class="form-check p-3" style="background-color: #fff3cd; border: 2px solid #ffc107; border-radius: 4px;">
                        <input asp-for="MeetsRequirement" type="checkbox" class="form-check-input" style="width: 20px; height: 20px;" />
                        <label asp-for="MeetsRequirement" class="form-check-label ms-2 fw-bold">
                            I confirm that I meet this mandatory requirement
                        </label>
                        <div class="form-text mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            <strong>Please Note:</strong> If you do not check this box, your application cannot be submitted. 
                            Only check this if you genuinely meet the requirement stated above.
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button class="btn btn-primary btn-lg flex-grow-1" type="submit" onclick="document.getElementById('SaveAsDraft').value='false'">
                        <i class="fas fa-arrow-right me-2"></i>
                        @(Model.QuestionIndex + 1 < Model.TotalQuestions ? "Save & Continue" : "Submit Application")
                    </button>
                    <button class="btn btn-outline-secondary btn-lg" type="submit" onclick="document.getElementById('SaveAsDraft').value='true'">
                        <i class="fas fa-save me-2"></i>Save Draft
                    </button>
                </div>
                <input type="hidden" id="SaveAsDraft" name="SaveAsDraft" value="false" />

                <div class="mt-3 text-center">
                    <a class="btn btn-link text-muted" asp-action="Job" asp-route-id="@Model.JobId">
                        <i class="fas fa-times me-1"></i>Cancel and return to job details
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Help Section -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Need Help?</h5>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mb-0">
                <li class="mb-2">
                    <i class="fas fa-check text-success me-2"></i>
                    Be specific and provide concrete examples
                </li>
                <li class="mb-2">
                    <i class="fas fa-check text-success me-2"></i>
                    Reference relevant qualifications, experience, or certifications
                </li>
                <li class="mb-2">
                    <i class="fas fa-check text-success me-2"></i>
                    You can save your progress as a draft and return later
                </li>
                <li class="mb-0">
                    <i class="fas fa-check text-success me-2"></i>
                    Answer honestly - false information may result in disqualification
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
