@model ApplicationStartViewModel
@{
    ViewData["Title"] = Model.Job.Title;
}

<div class="container">
    <!-- Job Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-briefcase me-3 text-primary"></i>@Model.Job.Title
                </h1>
                <p class="text-muted mb-0">
                    <i class="fas fa-building me-2"></i>@Model.Job.Department
                    <span class="mx-2">â€¢</span>
                    <i class="fas fa-map-marker-alt me-2"></i>@Model.Job.Location
                </p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a class="btn btn-outline-secondary" asp-controller="Applicant" asp-action="Dashboard">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Application Status Alert -->
    @if (Model.ExistingApplication is not null)
    {
        @if (Model.ExistingApplication.Status == ApplicationStatus.Draft)
        {
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Draft Application:</strong> You have started this application but haven't submitted it yet. Continue below to complete your application.
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Submitted)
        {
            <div class="alert alert-success mb-4">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Application Submitted:</strong> You have already applied for this position on @Model.ExistingApplication.SubmittedAtUtc?.ToString("MMMM dd, yyyy"). Our team will review your application and contact you soon.
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Rejected && Model.ExistingApplication.RejectionReason == "Did not meet mandatory requirement")
        {
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Application Blocked:</strong> This application cannot proceed because you indicated you do not meet a mandatory requirement. Please review the job requirements below.
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Rejected)
        {
            <div class="alert alert-warning mb-4">
                <i class="fas fa-times-circle me-2"></i>
                <strong>Application Not Successful:</strong> Unfortunately, your application was not successful this time.
                @if (!string.IsNullOrEmpty(Model.ExistingApplication.RejectionReason))
                {
                    <br /><em>Reason: @Model.ExistingApplication.RejectionReason</em>
                }
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Interview)
        {
            <div class="alert alert-success mb-4">
                <i class="fas fa-calendar-check me-2"></i>
                <strong>Interview Stage:</strong> Congratulations! Your application has progressed to the interview stage. We will contact you with interview details soon.
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Offer)
        {
            <div class="alert alert-success mb-4">
                <i class="fas fa-trophy me-2"></i>
                <strong>Offer Extended:</strong> Congratulations! We are pleased to extend an offer for this position. Check your email for details.
            </div>
        }
        else if (Model.ExistingApplication.Status == ApplicationStatus.Withdrawn)
        {
            <div class="alert alert-secondary mb-4">
                <i class="fas fa-ban me-2"></i>
                <strong>Application Withdrawn:</strong> You have withdrawn your application for this position.
            </div>
        }
    }

    <!-- Job Details Card -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0"><i class="fas fa-file-alt me-2"></i>Job Description</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5 class="text-primary mb-3">About this Position</h5>
                <p class="text-muted" style="white-space: pre-wrap;">@Model.Job.Description</p>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon me-3" style="font-size: 2rem;">
                            <i class="fas fa-building text-primary"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Department</div>
                            <div class="fw-bold">@Model.Job.Department</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon me-3" style="font-size: 2rem;">
                            <i class="fas fa-map-marker-alt text-primary"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Location</div>
                            <div class="fw-bold">@Model.Job.Location</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon me-3" style="font-size: 2rem;">
                            <i class="fas fa-clipboard-list text-primary"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Screening Questions</div>
                            <div class="fw-bold">@(Model.Job.KillerQuestions.Any() ? $"{Model.Job.KillerQuestions.Count} Question(s)" : "None")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Application Process Card -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0"><i class="fas fa-tasks me-2"></i>Application Process</h2>
        </div>
        <div class="card-body">
            @if (Model.Job.KillerQuestions.Any())
            {
                <div class="mb-4">
                    <h5 class="text-primary mb-3">Screening Questions</h5>
                    <p class="text-muted mb-3">
                        This position requires you to answer @Model.Job.KillerQuestions.Count mandatory screening question(s). 
                        These questions help us ensure candidates meet the minimum requirements for this role.
                    </p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>Please Note:</strong> You must meet all mandatory requirements to proceed with your application. 
                        If you indicate that you do not meet a requirement, your application cannot be submitted.
                    </div>

                    @if (Model.ExistingApplication?.ScreeningAnswers.Any() == true)
                    {
                        <div class="mb-3">
                            <h6>Your Progress:</h6>
                            <p class="text-muted">You have answered @Model.ExistingApplication.ScreeningAnswers.Count of @Model.Job.KillerQuestions.Count question(s).</p>
                        </div>
                    }
                </div>

                @if (Model.ExistingApplication?.Status != ApplicationStatus.Submitted && 
                     Model.ExistingApplication?.Status != ApplicationStatus.Rejected &&
                     Model.ExistingApplication?.Status != ApplicationStatus.Interview &&
                     Model.ExistingApplication?.Status != ApplicationStatus.Offer)
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary btn-lg" asp-action="KillerQuestion" asp-route-id="@Model.Job.Id">
                            <i class="fas fa-play-circle me-2"></i>
                            @(Model.ExistingApplication?.ScreeningAnswers.Any() == true ? "Continue Application" : "Start Application")
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="mb-4">
                    <h5 class="text-primary mb-3">Direct Application</h5>
                    <p class="text-muted mb-3">
                        This position does not require screening questions. Your application will be submitted directly 
                        for review by our team using the profile information you have provided.
                    </p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-user-check me-2"></i>
                        <strong>Profile Information:</strong> Make sure your profile is complete and up-to-date before applying. 
                        You can update your profile from your dashboard.
                    </div>
                </div>

                @if (Model.ExistingApplication?.Status != ApplicationStatus.Submitted && 
                     Model.ExistingApplication?.Status != ApplicationStatus.Rejected &&
                     Model.ExistingApplication?.Status != ApplicationStatus.Interview &&
                     Model.ExistingApplication?.Status != ApplicationStatus.Offer)
                {
                    <form method="post" asp-action="SubmitDirectApplication" asp-route-id="@Model.Job.Id">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Submit Application
                            </button>
                        </div>
                    </form>
                }
            }

            @if (Model.ExistingApplication?.Status == ApplicationStatus.Draft)
            {
                <div class="mt-3">
                    <a class="btn btn-outline-secondary" asp-controller="Applicant" asp-action="Dashboard">
                        <i class="fas fa-save me-2"></i>Save for Later
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Helpful Information -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0"><i class="fas fa-info-circle me-2"></i>Before You Apply</h2>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Ensure your profile information is complete and accurate</li>
                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Have your CV and supporting documents ready</li>
                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Read the job description carefully</li>
                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Answer all questions honestly and thoroughly</li>
                <li class="mb-0"><i class="fas fa-check text-success me-2"></i>You can save your application as a draft and return later</li>
            </ul>
        </div>
    </div>
</div>
