@model ERecruitment.Web.ViewModels.AdminApplicantProfileViewModel

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Declarations</h5>
    </div>
    <div class="card-body">
        <div class="accordion" id="declarationsAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                        Criminal Record
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#declarationsAccordion">
                    <div class="accordion-body">
                        <p><strong>Has Criminal Record:</strong> @(Model.HasCriminalRecord ? "Yes" : "No")</p>
                        @if (Model.HasCriminalRecord)
                        {
                            <p><strong>Details:</strong> @Model.CriminalRecordDetails</p>
                        }
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Pending Case
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#declarationsAccordion">
                    <div class="accordion-body">
                        <p><strong>Has Pending Case:</strong> @(Model.HasPendingCase ? "Yes" : "No")</p>
                        @if (Model.HasPendingCase)
                        {
                            <p><strong>Details:</strong> @Model.PendingCaseDetails</p>
                        }
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Dismissed for Misconduct
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#declarationsAccordion">
                    <div class="accordion-body">
                        <p><strong>Dismissed for Misconduct:</strong> @(Model.DismissedForMisconduct ? "Yes" : "No")</p>
                        @if (Model.DismissedForMisconduct)
                        {
                            <p><strong>Details:</strong> @Model.DismissedDetails</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
