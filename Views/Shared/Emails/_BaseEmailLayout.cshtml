@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body { font-family: Arial, sans-serif; color: #222; }
        .container { max-width: 640px; margin: 0 auto; padding: 16px; }
        .footer { color: #777; font-size: 12px; margin-top: 24px; }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        @RenderBody()
        <div class="footer">This is an automated message from eRecruitment.</div>
    </div>
    @RenderSection("Extra", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>

